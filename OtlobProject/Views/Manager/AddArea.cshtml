@model OtlobProject.Models.Area

@{
    ViewData["Title"] = "AddArea";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //SelectList ListofCountry = new SelectList(ViewBag.ListofCountry, "ID" , "CityName" + " / " + "SubArea");
}




<div class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <h1>Add Area</h1>
        </div>
        <div class="card">
            <div class="card-body register-card-body">
               

                <form asp-action="AddArea">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CityName" class="control-label"></label>
                        <input asp-for="CityName" class="form-control" />
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubArea" class="control-label"></label>
                        <input asp-for="SubArea" class="form-control" />
                        <span asp-validation-for="SubArea" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div style="text-align:center">
        <a asp-action="Index" class="btn btn-secondary">Back </a>
    </div>
</div>