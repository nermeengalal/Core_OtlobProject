@model IEnumerable<OtlobProject.Models.MealsInMenu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<h1 style="text-align:center;font-size:30px ;color: #3d9970;font-family: cursive;">@ViewBag.restname Menu</h1>
<br /><br />
<table class="table  table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.IsMeal)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/images/@item.Logo" style="width:100px;height:100px" class="img-circle img-bordered-sm" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.IsMeal)
            </td>
            
            <td>
                <a href="/Admin/UpdateMeal/@item.ID" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>|
                <a href="/Admin/MealDetail/@item.ID" class="btn btn-default btn-sm"><i class="fas fa-info-circle"></i></a>|
                <a href="/Admin/DeleteMeal/@item.ID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this Meal?');"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
