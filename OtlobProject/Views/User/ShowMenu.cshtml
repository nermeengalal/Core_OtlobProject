@model IEnumerable<OtlobProject.Models.MealsInMenu>

@{
    ViewData["Title"] = "ShowMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />

@foreach (var item in Model)
{
    <div class="card" style="width:200px ;margin:1%;display:inline-block">
        <img class="card-img-top" src="~/images/@item.Logo" alt="Card image" style="width:100%;height:200px">
        <div class="card-body">
            <h4 style="text-align:center;font-size:30px ;color: #3d9970;font-family: cursive;">@item.Name</h4>
        </div>
        <div style="text-align:center">
            <a href="/User/ShowMealDetails/@item.ID" class="btn btn-secondary btn-sm stretched-link" style="text-align:center">Info</a>
        </div>
    </div>


}


