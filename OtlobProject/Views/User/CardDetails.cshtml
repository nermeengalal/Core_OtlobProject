@model IEnumerable<OtlobProject.ModelViews.MealModelView>

@{
    //ViewData["Title"] = "CardDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center;font-size:30px ;color: #3d9970;font-family: cursive;">Card Details</h1>
<br />
<table class="table ">
    <thead>
        <tr style="color: #3d9970;font-family: cursive;">
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMeal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityNeeded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/@item.Logo" style="width:100px;height:100px" class="img-circle img-bordered-sm" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    @if (item.IsMeal == false)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Cat)
                        </td>
                    }
                    else
                    {
                        <th>
                            @Html.Label("Combo")
                        </th>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.IsMeal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantityNeeded)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteFromCard", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@if (Model != null)
{
    <div style="text-align:center">
        <a href="/User/BeforeConfirmingOrder" class="btn btn-warning btn-sm">Confirm Order</a>
    </div>
}

@if (Model == null)
{
    <div style="text-align:center">
        <a href="#" class="btn btn-secondary btn-sm">Confirm Order</a>
    </div>
}

